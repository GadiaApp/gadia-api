# App
TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=

# Storage
STORAGE_DRIVER=local
STORAGE_LOCAL_ROOT=./storage

# JWT (RS256)
JWT_PRIVATE_KEY_BASE64=
JWT_PUBLIC_KEY_BASE64=
JWT_ISSUER=https://server.local
JWT_AUDIENCE=gadia-api
JWT_ACCESS_TTL_SECONDS=900

# Refresh Tokens
REFRESH_TTL_SECONDS=2592000
REFRESH_REMEMBER_DEFAULT_DAYS=7

# OIDC (Optional
OIDC_GOOGLE_ISSUER=https://accounts.google.com
OIDC_GOOGLE_CLIENT_ID=...
OIDC_GOOGLE_CLIENT_SECRET=...
OIDC_GOOGLE_REDIRECT_URI=https://gadia.local/auth/sso/oidc/google/callback

# OIDC
OIDC_ENTRA_ISSUER=https://login.microsoftonline.com/<tenant>/v2.0
OIDC_ENTRA_CLIENT_ID=...
OIDC_ENTRA_CLIENT_SECRET=...
OIDC_ENTRA_REDIRECT_URI=https://gadia.local/auth/sso/oidc/entra/callback

# SAML (ex: ENT/IdP acad√©mique)
SAML_SP_ENTITY_ID=https://gadia.local/saml/metadata
SAML_SP_ASSERTION_URL=https://gadia.local/auth/sso/saml/acs
SAML_IDP_METADATA_URL=https://idp.example.edu/metadata

# MFA
MFA_ISSUER=GADIA

# Rate limiting
RATE_GLOBAL_POINTS=100
RATE_GLOBAL_DURATION=60

# Cookies
COOKIE_DOMAIN=.gadia.local
COOKIE_SECURE=true

# Misc
AUDIT_ENABLED=true
LIMITER_STORE=redis